<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestMauiApp1.Views.vBatterie"
             Title="vBatterie">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label
            Text="Alimentation"
            x:Name="lbalimentation"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            FontSize="25"/>
        <Button 
            Text="Afficher"
            x:Name="btnAfficher"
            Clicked="Afficher"
            FontSize="Body"
            HorizontalOptions="Center"
            VerticalOptions="Center"/>
        <Label
            x:Name="lbetatbatterie"
            Text="Etat Batterie"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            FontSize="25"/>
        <Label
            x:Name="lbvide" 
            Text=""
            HorizontalOptions="Center"
            VerticalOptions="Center"/>

    </VerticalStackLayout>
</ContentPage>